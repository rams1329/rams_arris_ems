<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing: <%= customer.firstName %>
      <%= customer.lastName %>
  </h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= customer.firstName %>
              <%= customer.lastName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(customer.updatedAt).toUTCString() %></b>
      <b>UserId:</b>
      <%= customer._id %>
    </div>
  </div>

</div>


<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">First Name</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="<%= customer.firstName %>"
        placeholder="First Name" required>
    </div>

    <div class="col">
      <label for="lastName">Last Name</label>
      <input type="text" class="form-control" id="lastName" name="lastName" value="<%= customer.lastName %>"
        placeholder="Last Name">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Telephone</label>
      <input type="text" class="form-control" id="tel" name="tel" value="<%= customer.tel %>" placeholder="Telephone">
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="email" value="<%= customer.email %>" placeholder="Email">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="dob">Date of birth</label>
      <input type="date" class="form-control" id="dob" name="dob"
        value="<%= customer.dob ? customer.dob.toISOString().split('T')[0] : '' %>" placeholder="Date of Birth">
    </div>




    <div class="col">
      <label for="Department">Department</label>
      <input type="text" class="form-control" id="Department" name="Department" value="<%= customer.Department %>"
        placeholder="Department">
    </div>
  </div>


  <div class="row form-group mb-4">
    <div class="col">
      <label for="empno">Employee Number</label>
      <input type="text" class="form-control" id="empno" name="empno" value="<%= customer.empno %>"
        placeholder="Employee Number">
    </div>

    <div class="col">
      <label for="porc">Employment Type</label>
      <select class="form-control" id="porc" name="porc">
        <option value="select" <%=customer.porc==='select' ? 'selected' : '' %>>Select</option>
        <option value="permanent" <%=customer.porc==='permanent' ? 'selected' : '' %>>Permanent</option>
        <option value="contract" <%=customer.porc==='contract' ? 'selected' : '' %>>Contract</option>
      </select>
    </div>

    <div class="col">
      <label for="status">Employee Status</label>
      <select class="form-control" id="status" name="status">
        <option value="" <%=customer.status==='select' ? 'selected' : '' %>>Select</option>
        <option value="Active" <%=customer.status==='Active' ? 'selected' : '' %>>Active</option>
        <option value="Inactive" <%=customer.status==='Inactive' ? 'selected' : '' %>>Inactive</option>
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="designation">Designation</label>
      <input type="text" class="form-control" id="designation" name="designation" value="<%= customer.designation %>"
        placeholder="Designation">
    </div>

    <div class="col">
      <label for="qualification">Qualification</label>
      <input type="text" class="form-control" id="qualification" name="qualification"
        value="<%= customer.qualification %>" placeholder="Qualification">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="yog">Year of Graduation</label>
      <input type="date" class="form-control" id="yog" name="yog"
        value="<%= customer.yog ? customer.yog.toISOString().split('T')[0] : '' %>" placeholder="Year of Graduation">
    </div>

    <div class="col">
      <label for="doj">Date of Joining</label>
      <input type="date" class="form-control" id="doj" name="doj"
        value="<%= customer.doj ? customer.doj.toISOString().split('T')[0] : '' %>" placeholder="Date of Joining">
    </div>
  </div>



  <div class="row form-group mb-4">
    <div class="col">
      <label for="aadharno">Aadhar Number</label>
      <input type="text" class="form-control" id="aadharno" name="aadharno" value="<%= customer.aadharno %>"
        placeholder="Aadhar Number">
    </div>

    <div class="col">
      <label for="panno">PAN Number</label>
      <input type="text" class="form-control" id="panno" name="panno" value="<%= customer.panno %>"
        placeholder="PAN Number">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="vanno">VAN Number</label>
      <input type="text" class="form-control" id="vanno" name="vanno" value="<%= customer.vanno %>"
        placeholder="VAN Number">
    </div>

    <div class="col">
      <label for="pfno">PF Number</label>
      <input type="text" class="form-control" id="pfno" name="pfno" value="<%= customer.pfno %>"
        placeholder="PF Number">
    </div>
  </div>

  <div class="form-group mb-4">
    <label for="address">Address</label>
    <textarea class="form-control" name="address" id="address" cols="30" rows="2"
      placeholder="Address"><%= customer.address %></textarea>
  </div>

  <div class="form-group mb-4">
    <label for="remarks">Remarks</label>
    <textarea class="form-control" name="remarks" id="remarks" cols="30" rows="2"
      placeholder="Remarks"><%= customer.remarks %></textarea>
  </div>


  <div class="row form-group mb-4">
    <div class="col">
      <label for="prevexp">Previous Experience</label>
      <input type="text" class="form-control" id="prevexp" name="prevexp" value="<%= customer.prevexp %>"
        placeholder="Previous Experience">
    </div>

    <div class="col">
      <label for="arrisexp">Arris Experience</label>
      <input type="text" class="form-control" id="arrisexp" name="arrisexp" value="<%= customer.arrisexp %>"
        placeholder="Arris Experience">
    </div>

    <div class="col">
      <label for="totexp">Total Experience</label>
      <input type="text" class="form-control" id="totexp" name="totexp" value="<%= customer.totexp %>"
        placeholder="Total Experience">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="prevcompname">Previous Company Name</label>
      <input type="text" class="form-control" id="prevcompname" name="prevcompname" value="<%= customer.prevcompname %>"
        placeholder="Previous Company Name">
    </div>

    <div class="col">
      <label for="accno">Account Number</label>
      <input type="text" class="form-control" id="accno" name="accno" value="<%= customer.accno %>"
        placeholder="Account Number">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="ifsc">IFSC Code</label>
      <input type="text" class="form-control" id="ifsc" name="ifsc" value="<%= customer.ifsc %>"
        placeholder="IFSC Code">
    </div>

    <div class="col">
      <label for="bankname">Bank Name</label>
      <input type="text" class="form-control" id="bankname" name="bankname" value="<%= customer.bankname %>"
        placeholder="Bank Name">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="bankid">Bank ID</label>
      <input type="text" class="form-control" id="bankid" name="bankid" value="<%= customer.bankid %>"
        placeholder="Bank ID">
    </div>

    <div class="col">
      <label for="dlname">DL Name</label>
      <input type="text" class="form-control" id="dlname" name="dlname" value="<%= customer.dlname %>"
        placeholder="DL Name">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="dlemail">DL Email</label>
      <input type="text" class="form-control" id="dlemail" name="dlemail" value="<%= customer.dlemail %>"
        placeholder="DL Email">
    </div>

    <div class="col">
      <label for="dlph">DL Phone</label>
      <input type="text" class="form-control" id="dlph" name="dlph" value="<%= customer.dlph %>" placeholder="DL Phone">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="ecpname">Emergency Contact Person Name</label>
      <input type="text" class="form-control" id="ecpname" name="ecpname" value="<%= customer.ecpname %>"
        placeholder="Emergency Contact Person Name">
    </div>

    <div class="col">
      <label for="ecpnumber">Emergency Contact Person Number</label>
      <input type="text" class="form-control" id="ecpnumber" name="ecpnumber" value="<%= customer.ecpnumber %>"
        placeholder="Emergency Contact Person Number">
    </div>
  </div>





  <div class="form-group mb-4">
    <label for="details">Customer Details</label>
    <textarea class="form-control" name="details" id="details" cols="30" rows="12"
      placeholder="Customer Details"><%= customer.details %></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Customer</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
      data-bs-target="#deleteModal">Delete Customer</button>

  </div>

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a customer record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the customer record of <b class="fw-bold">
            <%= customer.firstName %>
              <%= customer.lastName %>
          </b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
        </form>
      </div>
    </div>
  </div>
</div>